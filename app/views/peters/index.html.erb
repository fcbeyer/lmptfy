<h1 class="fancy-header">Listing peters</h1>
<div class="container">
	<div class="row">
		<table class="table table-bordered table-condensed table-hover">
		  <tr>
		    <th>Name</th>
		    <th>Email</th>
		    <th>Active</th>
		    <th></th>
		    <th></th>
		    <th></th>
		  </tr>
		
		<% @peters.each do |peter| %>
		  <tr>
		    <td><%= peter.name %></td>
		    <td><%= peter.email %></td>
		    <td><%= link_to 'Show', peter %></td>
		    <td><%= link_to 'Edit', edit_peter_path(peter) %></td>
		    <td><%= link_to 'Destroy', peter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
		<% end %>
		</table>
		
		<br />
		
		<%= link_to 'New Peter', new_peter_path %>
	</div>
</div>
